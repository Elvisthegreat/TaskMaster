{% extends 'base.html.twig' %}

{% block body %}

	<h1 class="text-center mt-5">Task details</h1>

	<div class="container mb-3 d-flex justify-content-center align-items-center text-center">
		<div class="row">
			<div class="col-12">
				<div class="card mt-3">
					<div class="card-body">
						<h5 class="card-title">{{ task.title }}</h5>
						<p class="card-text">{{ task.description }}</p>
						<span class="badge {% if task.status == 'In Progress' %}bg-primary {% elseif task.status == 'Pending' %} bg-warning {% else %} bg-success {% endif %}">{{ task.status }}</span>
						<p class="text-muted mt-2">
							ğŸ“… Due Date:
							<strong>{{ task.dueDate|date('d M Y') }}</strong>
						</p>
					</div>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
